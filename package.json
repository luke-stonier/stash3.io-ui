{
  "name": "stash3-io-ui",
  "version": "0.0.1",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/lib-storage": "^3.873.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0",
    "@monaco-editor/react": "^4.7.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "keytar": "^7.9.0",
    "marked": "^16.2.1",
    "material-symbols": "^0.34.1",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "react-scripts": "5.0.1",
    "reflect-metadata": "^0.2.2",
    "stripe": "^18.5.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.26",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "react:start": "npm run reset && cross-env BROWSER=none react-scripts start",
    "react:build": "react-scripts build",
    "api:build": "tsc -p tsconfig.api.json",
    "api:watch": "tsc -p tsconfig.api.json -w",
    "api:dev": "cd ./api && npm run dev",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:watch": "tsc -p tsconfig.electron.json -w",
    "electron:start": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently \"npm:api:dev\" \"npm run react:start\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "ui": "concurrently \"npm run react:start\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "build": "npm run react:build && npm run api:build && npm run electron:build",
    "log": "heroku logs --app=stash3-io --source app --tail",
    "reset": "kill-port 3000 && kill-port 5000",
    "dist": "electron-builder",
    "dist:win": "electron-builder -w",
    "dist:mac": "electron-builder -m",
    "dist:linux": "electron-builder -l",
    "publish": "electron-builder --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/keytar": "^4.4.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.nitrose.stash3io",
    "productName": "Stash3.IO",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!**/*.map"
    ],
    "asar": true,
    "publish": [],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icons/"
    }
  }
}
