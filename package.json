{
  "name": "stash3-io-ui",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.873.0",
    "@aws-sdk/lib-storage": "^3.873.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "electron-store": "^8.2.0",
    "keytar": "^7.9.0",
    "material-symbols": "^0.34.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "react:start": "cross-env BROWSER=none react-scripts start",
    "react:build": "react-scripts build",

    "api:build": "tsc -p tsconfig.api.json",
    "api:watch": "tsc -p tsconfig.api.json -w",
    "api:dev": "nodemon --watch .api-dist --exec \"node .api-dist/api.js\"",

    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:watch": "tsc -p tsconfig.electron.json -w",

    "electron:dev": "wait-on http://localhost:3000 && electron .electron-dist/main.js",

    "dev": "concurrently -k \"npm:react:start\" \"npm:api:watch\" \"npm:api:dev\" \"npm:electron:watch\" \"npm:electron:dev\"",

    "build": "npm run react:build && npm run api:build && npm run electron:build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/keytar": "^4.4.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "wait-on": "^8.0.4"
  }
}
